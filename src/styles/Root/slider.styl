@import '../../styles/colors'

.slider
  height: auto;
  padding: 0;
  margin: 0 calc(35/1300*100%);
  background: other-background
  &__viewport
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;

  &__slides
    display: flex;
    height: auto;

  &__slide
    height: 100%;

  &__img
    width: 100%;
    height: 100%;

  &__btn
    position: absolute;
    top: 50%;
    width: 30px;
    height: 30px;
    background: inherit;
    border: 0;
    cursor: pointer;
    z-index: 100;
    transform: translateY(-50%);
    &--left
      left: 15px;
      &::before
        position: absolute;
        top: 26px;
        left: 0;
        content: '';
        width: 22px;
        height: 5px;
        background-color: #ffffff;
        transform: rotate(45deg);
      &::after
        position: absolute;
        top: 14px;
        left: 0;
        content: '';
        width: 22px;
        height: 5px;
        background-color: #ffffff;
        transform: rotate(-45deg);

    &--right
      right: 15px;
      &::before
        position: absolute;
        top: 26px;
        left: 0;
        content: '';
        width: 22px;
        height: 5px;
        background-color: #ffffff;
        transform: rotate(-45deg);
      &::after
        position: absolute;
        top: 14px;
        left: 0;
        content: '';
        width: 22px;
        height: 5px;
        background-color: #ffffff;
        transform: rotate(45deg);


  &__dots
    display: flex;
    align-items: center;
    min-width: 175px;
    height: 10px;
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);

  &__dot
    width: 15px
    height: 15px;
    margin-right: 10px;
    border: 1px solid #ffffff;
    border-radius: 100%;

  &__dot.active
    background: other-background;

.slider__slides .owl-stage-outer
  width: 100%;

.owl-stage
  display: flex;
  height: 100%;

.owl-nav
  display: none;

.owl-item
  height: 100%;

@media (min-width: 768px)
  .slider
    padding-left: 0;
    padding-right: 0;
