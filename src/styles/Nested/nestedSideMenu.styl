@import '../../styles/colors'
.aside
  display: none;

@media (min-width: 1078px)
  .aside
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 24%;
    padding: 0;
    padding-top: 25px;
    background: other-background;
    z-index: 10;
    &__row
      &--date
        padding: 0 4%;
        margin-bottom: 5px;
        color: primary-text;
      &--showMore
        justify-content: center;
        margin-bottom: 10px;

    &__btn
      &--showMore
        padding: 0;
        padding-bottom: 2px;
        font-size: 16px;
        line-height: 18px;
        font-weight: bold;
        font-family: 'Roboto'
        color: primary-text;
        background: none;
        border: 0;
        border-bottom: 1px dashed primary-text;
        cursor: pointer;

    &__svg
      width: 15px;
      height: 15px;
      margin-right: 14px;
      &--news
        width: 15px;
        height: 15px;
      &--tickets
        width: 20px;
        height: 19px;
        margin-right: 9px;
      &--boxOffices
        width: 18px;
        height: 15px;
        margin-right: 11px;
      &--venues
        width: 17px;
        height: 16px;
        margin-right: 12px;

    &__link
      display: block;
      width: 100%;
      padding-left: 30px;
      padding-right: calc(20 / 1230 * 100%);
      font-size: 16px;
      line-height: 32px;
      text-decoration: none;
      color: primary-text;
      &--social
        padding-left: 0;
      &:hover
        text-decoration: none;

    &__list
      display: flex;
      align-items: center;
      margin-bottom: 26px;
      margin-top: 21px;
      padding-left: 30px;
      list-style: none;

    &__listItem
      margin-right: 10px;
      margin-top: 0;

    &__banners
      width: 100%;
      padding-right: calc(20 / 270 * 100%);
      padding-left: 30px;
      padding-top: 30px;
      border-top: 1px solid #d9d9d9;

    &__banner
      width: 240px;
      position: relative;
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;
      background: other-background;
      border-radius: 5px;
      box-shadow: 0 0 6px 0 rgba(163, 163, 163, 0.8)

    &__eventTop
      position: relative;
      width: 100%;
      color: secondary-text-color;
      border-top-left-radius: 5px;
      border-top-right-radius: 5px;

    &__when
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      padding: 12px 4%;
      text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);

    &__img
      &--event
        width: 100%;
        border-top-right-radius: 5px;
        border-bottom-left-radius: 0px;

    &__time
      font-size: 14px;
      line-height: 14px;

    &__eventBottom
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 100%;
      padding: 12px 0;
      padding-bottom: 0;

    &__details
      width: 100%;

    &__title
      margin: 0;
      margin-bottom: 20px;
      padding-left: 0;
      font-size: 16px;
      line-height: 16px;
      font-weight: normal;
      color: primary-text;
      &--event
        display: block;
        margin-bottom: 3px;
        padding: 0 4%;
        font-size: 14px;
        line-height: 14px;
        font-weight: bold;

    &__ticketDetails
      display: flex;
      align-items: center;
      width: 100%;
      height: 39px;
      color: primary-text;
      background: rgba(245, 245, 245, 0.3);
      border-top: 1px solid #e1e1e1;

    &__priceBlock
      position: relative;
      display: flex;
      width: 37%;
      margin-left: 23px;
      padding: 0 4%;
      font-size: 14px;
      line-height: 14px;
      &::before
        display: block;
        position: absolute;
        top: -1px;
        left: -12px;
        content: '';
        width: 14px;
        height: 16px;
        background: url('../../img/rur.png');

    &__priceTitle
      display: inline;

    &__price
      &--startPrice
        padding-left: 5px;
      &--mobile
        display: inline;
      &--desktop
        display: none;

    &__onSale
      position: relative;
      margin-left: 48px;
      font-size: 14px;
      line-height: 14px;
      &::before
        position: absolute;
        top: -1px;
        left: -21px;
        content: '';
        width: 10px;
        height: 16px;
        background: url('../../img/ticket.png');

    &__warning
      display: none;
      position: absolute;
      left: 0;
      bottom: -1px;
      width: 100%;
      height: 39px;
      text-transform: uppercase;
      font-size: 18px;
      line-height: 39px;
      font-weight: bold;
      text-align: center;
      color: secondary-text-color;
      border-bottom-right-radius: 5px;
      border-bottom-left-radius: 5px;

  .aside__warning.soldOut
    display: block;
    background: sold-background;

  .aside__warning.canceled
    display: block;
    background: warn-background;

.aside__eventBlock:hover > .aside__btn--buyTicket
  display: block;
