@import '../../styles/colors'
.content
  width: 76.2%;
  background: other-background;
  z-index: 11;
  &__btn
    width: 200px;
    height: 40px;
    color: secondary-text-color;
    font-size: 16px;
    line-height: 30px;
    font-weight: bold;
    background: elements-background;
    border: 0;
    border-radius: 5px;
    cursor: pointer;

  &__row
    display: flex;
    margin: 0;
    font-size: 14px;
    line-height: 20px;
    font-weight: normal;
    &--venue
      font-size: 24px;
      line-height: 30px;
    &--venueHall
      margin-bottom: 20px;
    &--phone
      margin-bottom: 20px;
    &--type
      margin-bottom: 0;
    &--capacity
      margin-bottom: 5px;
    &--description
      margin-bottom: 49px;
      font-size: 24px;
      line-height: 30px;
    &--link
      margin-bottom: 22px;
      font-weight: bold;
      text-decoration: underline;
      color: primary-text;
      cursor: pointer;
      &:hover
        text-decoration: none;
    &--text
      text-indent: 35px;
    &--slider
      padding-left: 3.3%
      padding-right: 3.3%;

  &__column
    display: flex;
    flex-direction: column;
    padding: 30px 3.3%;
    &--location
      width: calc(500 / 920 * 100%)
    &--tickets
      width: calc(420 / 920 * 100%)

  &__label
    margin-right: 4px;
    font-weight: bold;

  &__map
    position: relative;
    width: 100%;
    height: auto;

  &__mapMask
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10000;
    &--first
      box-shadow: inset 0 0 10px 0 rgba(0, 0, 0, 0.9);
    &--second
      position: absolute;
      top: 10px;
      bottom: 10px;

  &__description
    padding-top: 30px;
    padding-left: 3.3%
    padding-right: 3.3%;
    margin-bottom: 25px;

  &__title
    margin: 0;
    margin-bottom: 20px;
    font-size: 18px;
    line-height: 20px;
    font-weight: normal;

  &__slider
    display: flex;
    position: relative;
    width: 100%;
    margin-bottom: 25px;
    overflow: hidden;

  &__slide
    display: block;
