@import '../../styles/colors'
.wrapper
  margin: 0 calc(35/1300*100%);

.contentWrapper
  display: flex;
  background: inner-aside-background;
  position: relative;
  &__ticket
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: -30px;
    right: 10%;
    width: 50px;
    height: 50px;
    background: elements-background;
    border-radius: 100%
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.9);
    z-index: 13;

  &__img
    &--ticket
      width: 30px;
      height: 30px;
.header
  position: relative;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-top: 49px;
  background: inner-content-background;

  &__row
    display: flex;
    width: 100%;
    &--first
      position: absolute;
      top: 65px;
      left: 0;
      justify-content: space-between;
      padding: 0 1.7%;
    &--ageRestrict
      display: block;
      position: absolute;
      top: 130px;
      left: 0;
      justify-content: flex-end;
      text-align: right;
      padding: 0 1.7%;
      font-size: 16px;
      line-height: 24px;
      font-weight: bold;
      color: #ffffff;
      text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);
    &--date
      position: absolute;
      bottom: 85px;
      left: 0;
      justify-content: flex-start;
      text-align: left;
      padding: 0 1.7%;
      font-size: 14px;
      line-height: 20px;
      font-weight: bold;
      color: #ffffff;
      text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);

  &__title
    position: absolute;
    bottom: 58px;
    left: 0;
    justify-content: flex-start;
    text-align: left;
    margin: 0;
    padding: 0 1.7%;
    font-size: 24px;
    line-height: 24px;
    font-weight: bold;
    color: #ffffff;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);

  &__breadcrumbs
    width: 70%
    color: #ffffff;
    font-size: 12px;
    line-height: 18px;
    font-weight: bold;

  &__daysLeft
    width: 88px
    text-align: center;

  &__daysLeftCount
    color: #ffffff;
    font-size: 16px;
    line-height: 20px;
    font-weight: bold;
    text-transform: uppercase;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);

  &__daysLeftText
    display: block;
    color: #ffffff;
    font-size: 9px;
    line-height: 20px;
    font-weight: bold;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);

  &__img
    width: 100%;
    height: 300px;
    &--ticket
      width: calc(71 / 101 * 100%);
      height: auto;
      vertical-align: middle;

@media (min-width: 1025px)
  .contentWrapper
    &__ticket
      right: 27.3%;

@media (min-width: 415px)
  .header
    &__breadcrumbs
      font-size: 16px;
      line-height: 24px;

    &__row
      &--ageRestrict
        top: 110px;
        font-size: 36px;
        line-height: 24px;
      &--date
        font-size: 16px;
        line-height: 24px;

    &__daysLeft
      width: 121px

    &__daysLeftCount
      font-size: 24px;
      line-height: 20px;

    &__daysLeftText
      font-size: 12px;
      line-height: 20px;

    &__title
      bottom: 54px;
      font-size: 28px;
      line-height: 24px;

  .contentWrapper
    &__ticket
      top: -40px;
      width: 70px;
      height: 70px;
    &__img
      &--ticket
        width: 40px;
        height: 40px;

@media (min-width: 768px)
  .contentWrapper
    &__ticket
      top: -45px;
      width: 101px;
      height: 101px;

    &__img
      &--ticket
        width: 71px;
        height: 71px;
