.content__descriptionInner
  margin: 0;
  padding: 0;


.content
  width: 76.2%;
  padding-left: 2.5%;
  padding-right: 2%;
  background: other-background;
  box-shadow: 2px 0 2px #d8d8d8;
  z-index: 11;
  &__filters
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 20px;
    margin-bottom: 40px;

  &__filter
    height: 28px;
    padding: 0 19px;
    margin-right: 16px;
    margin-bottom: 15px;
    font-size: 14px;
    line-height: 20px;
    color: elements-background;
    background: other-background;
    border: 1px solid elements-background;
    border-radius: 20px;
    cursor: pointer;
    &--active
      color: secondary-text-color;
      background: elements-background;
    &:hover
      color: secondary-text-color;
      background: elements-background;
      transition: all 0.5s;

  &__newsBlock
    display: flex;
    min-height: 106px;
    margin-bottom: 50px;

  &__img
    align-self: center;
    width: 90px;
    height: 90px;
    margin-right: 20px;

  &__title
    margin: 0;
    font-size: 16px;
    line-height: 16px;

  &__date
    font-size: 12px;
    line-height: 12px;

  &__description
    width: 100%;
    min-height: 40px;
    margin: 0;
    margin-bottom: 7px;
    font-size: 14px;
    line-height: 20px;

  &__description p
    margin-bottom: 5px;
    margin-top: 5px;
    -webkit-margin-before: 5px;
    -webkit-margin-after: 5px;
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;

  &__descriptionInner
    margin-bottom: 0;
    margin-top: 0;

  &__tag
    display: inline-block;
    height: 22px;
    padding: 0 14px;
    margin-right: 10px;
    font-size: 12px;
    line-height: 20px;
    color: elements-background;
    background: other-background;
    border: 1px solid elements-background;
    border-radius: 20px;
    cursor: pointer;
    &--active
      color: secondary-text-color;
      background: elements-background;
    &:hover
      color: secondary-text-color;
      background: elements-background;
      transition: all 0.5s;

.content__link
  font-style: 'Roboto';
  color: #3b5998 !important;
  text-decoration: none;
  cursor: pointer;
  &:hover
    text-decoration: none;
